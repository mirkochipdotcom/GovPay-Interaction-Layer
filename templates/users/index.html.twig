{% extends 'base.html.twig' %}
{% block content %}
<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4">Utenti</h1>
    <a class="btn btn-primary" href="/users/new">Nuovo utente</a>
  </div>

  <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
    <div class="flex-grow-1">
      <input id="usersSearch" type="search" class="form-control form-control-sm" placeholder="Cerca per ID, nome, cognome, email o ruolo" aria-label="Cerca utenti">
    </div>
    <div class="text-muted small" id="usersCounter" aria-live="polite"></div>
    <button id="usersClear" type="button" class="btn btn-sm btn-outline-secondary">Pulisci</button>
  </div>

  <table class="table table-striped" id="usersTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Email</th>
        <th>Ruolo</th>
        <th>Azioni</th>
      </tr>
    </thead>
    <tbody>
      {% if users is defined and users|length > 0 %}
        {% for u in users %}
          <tr>
            <td class="font-monospace">{{ u.id }}</td>
            <td>{{ u.first_name|default('') }}</td>
            <td>{{ u.last_name|default('') }}</td>
            <td>{{ u.email }}</td>
            <td>
              {% set roleClass = 'bg-secondary' %}
              {% if u.role == 'superadmin' %}
                {% set roleClass = 'bg-danger' %}
              {% elseif u.role == 'admin' %}
                {% set roleClass = 'bg-primary' %}
              {% elseif u.role == 'user' %}
                {% set roleClass = 'bg-success' %}
              {% endif %}
              <span class="badge {{ roleClass }}">{{ u.role|capitalize }}</span>
            </td>
            <td>
              {# If current user is admin and target is superadmin, show disabled controls with explanation #}
              {% set is_admin = current_user is defined and current_user.role == 'admin' %}
              {% set target_is_super = u.role == 'superadmin' %}
              {% set is_self = current_user is defined and current_user.id == u.id %}
              {% if is_admin and target_is_super %}
                <button class="btn btn-sm btn-outline-primary" disabled title="Non puoi modificare un account superadmin">Modifica</button>
                <button class="btn btn-sm btn-outline-danger" disabled title="Non puoi eliminare un account superadmin">Elimina</button>
              {% elseif is_self %}
                <a class="btn btn-sm btn-outline-primary" href="/users/{{ u.id }}/edit">Modifica</a>
                <button class="btn btn-sm btn-outline-danger" disabled title="Non puoi eliminare il tuo account">Elimina</button>
              {% else %}
                <a class="btn btn-sm btn-outline-primary" href="/users/{{ u.id }}/edit">Modifica</a>
                {# If target is the sole superadmin, disable deletion and show explanation #}
                {% set count_super = attribute(_context, 'count_superadmins') is defined ? count_superadmins : 0 %}
                {% if target_is_super and count_super <= 1 %}
                  <button class="btn btn-sm btn-outline-danger" disabled title="Impossibile eliminare l\'ultimo superadmin. Assegna prima il ruolo a un altro utente">Elimina</button>
                {% else %}
                  <form method="post" action="/users/{{ u.id }}/delete" style="display:inline-block" onsubmit="return confirm('Confermi l\'eliminazione?');">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Elimina</button>
                  </form>
                {% endif %}
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      {% else %}
        <tr id="noUsersRow"><td colspan="6" class="text-center text-muted">Nessun utente</td></tr>
      {% endif %}

      {# Row shown when filter yields no results (hidden by default) #}
      <tr id="noUsersMatchRow" class="d-none"><td colspan="6" class="text-center text-muted">Nessun utente corrisponde al filtro</td></tr>
    </tbody>
  </table>

  <script src="/assets/js/users-list-filter.js"></script>
</div>
{% endblock %}
