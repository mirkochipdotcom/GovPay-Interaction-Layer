<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}GovPay - Backend{% endblock %}</title>
    <link rel="icon" href="{{ app_favicon.href }}" type="{{ app_favicon.type }}">
  <link rel="stylesheet" href="/assets/bootstrap-italia/css/bootstrap-italia.min.css">
  <link rel="stylesheet" href="/assets/fontawesome/css/all.min.css">
    {% block head %}{% endblock %}
  </head>
  <body>
    {% include 'partials/header.html.twig' %}
    <main class="container my-4">
      {% if flash %}
        <div class="mb-3">
          {% for m in flash %}
            <div class="alert alert-{{ m.type == 'success' ? 'success' : (m.type == 'error' ? 'danger' : 'info') }}" role="alert">{{ m.text }}</div>
          {% endfor %}
        </div>
      {% endif %}
      {% block content %}{% endblock %}
    </main>
    {% include 'partials/footer.html.twig' %}
  <script src="/assets/bootstrap-italia/js/bootstrap-italia.bundle.min.js"></script>
  </body>
</html>
