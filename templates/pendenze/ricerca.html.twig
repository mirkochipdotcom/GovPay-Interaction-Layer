{% extends 'base.html.twig' %}

{% block title %}Pendenze - Ricerca{% endblock %}

{% block content %}
  {# Titolo rimosso per ottimizzare lo spazio #}

  {# Messaggi errore #}
  {% if errors is defined and errors %}
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        {% for e in errors %}<li>{{ e }}</li>{% endfor %}
      </ul>
    </div>
  {% endif %}

  {% set f = filters ?? {} %}
  <form method="get" action="/pendenze/ricerca" class="card mb-4">
    <input type="hidden" name="q" value="1" />
    <div class="card-header d-flex align-items-center justify-content-between">
  <div class="h5 mb-0">Ricerca Pendenze - Filtro</div>
      <div class="text-muted small">Compila uno o più campi</div>
    </div>
    <div class="card-body">
      {% set ord = f.ordinamento|default('-dataCaricamento') %}
      <div class="row g-3">
        <div class="col-md-4">
          <div class="form-group">
            <label for="idPendenza" class="form-label">ID Pendenza</label>
            <input class="form-control" id="idPendenza" name="idPendenza" value="{{ f.idPendenza|default('') }}" placeholder="ID pendenza">
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="idDebitore" class="form-label">ID Debitore (CF/PI)</label>
            <input class="form-control" id="idDebitore" name="idDebitore" value="{{ f.idDebitore|default('') }}" placeholder="CF/PI">
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label for="iuv" class="form-label">IUV</label>
            <input class="form-control" id="iuv" name="iuv" value="{{ f.iuv|default('') }}" placeholder="IUV">
          </div>
        </div>
        <div class="col-md-4">
          <div class="select-wrapper w-100">
            <label for="stato" class="form-label">Stato</label>
            <select id="stato" name="stato" class="form-select" aria-label="Stato">
              <option value="">-- tutti --</option>
              {% set allowed = allowed_states|default([]) %}
              {% set order = pendenza_states|keys %}
              {# Prima gli stati mappati, nell'ordine definito #}
              {% for s in order %}
                {% if s in allowed %}
                  {% set conf = pendenza_states[s] %}
                  <option value="{{ s }}" {% if f.stato is defined and f.stato == s %}selected{% endif %}>{{ conf.label }}</option>
                {% endif %}
              {% endfor %}
              {# Poi eventuali stati non mappati (fallback) #}
              {% for s in allowed %}
                {% if s not in order %}
                  <option value="{{ s }}" {% if f.stato is defined and f.stato == s %}selected{% endif %}>{{ s }}</option>
                {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group date-range-container position-relative">
            <label for="dateRangeInput" class="form-label">Intervallo date</label>
            <input type="text" id="dateRangeInput" class="form-control" placeholder="Seleziona intervallo" autocomplete="off" inputmode="none">
            <input type="hidden" id="dataDa" name="dataDa" value="{{ f.dataDa|default('') }}">
            <input type="hidden" id="dataA" name="dataA" value="{{ f.dataA|default('') }}">
            <div id="dateRangePanel" class="card shadow date-range-panel d-none">
              <div class="card-body p-3">
                <div class="row g-2 align-items-center">
                  <div class="col-6">
                    <label for="dateStart" class="form-label mb-1">Da</label>
                    <input type="date" id="dateStart" class="form-control">
                  </div>
                  <div class="col-6">
                    <label for="dateEnd" class="form-label mb-1">A</label>
                    <input type="date" id="dateEnd" class="form-control">
                  </div>
                </div>
                <div class="d-flex flex-wrap gap-2 mt-3">
                  <button type="button" class="btn btn-outline-primary btn-sm" data-range="week">Ultima settimana</button>
                  <button type="button" class="btn btn-outline-primary btn-sm" data-range="month">Ultimo mese</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" data-range="all">Tutto</button>
                  <button type="button" class="btn btn-primary btn-sm ms-auto" data-action="apply">Applica</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-3 d-flex flex-wrap gap-2 align-items-center">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search me-1"></i> Cerca
        </button>
        <a class="btn btn-outline-secondary" href="/pendenze/ricerca">
          <i class="fas fa-eraser me-1"></i> Azzera
        </a>
        <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFilters" aria-expanded="false" aria-controls="advancedFilters">
          Filtri avanzati
        </button>

        <div class="ms-auto d-flex align-items-center gap-2">
          <span class="text-muted small">Ordine</span>
          <div class="toggles">
            <label for="ordToggleVecchie" class="mb-0 small">
              <span class="me-2">Rec</span>
              <input type="checkbox" id="ordToggleVecchie" name="ordVecchiePrima" {% if ord == '+dataCaricamento' %}checked{% endif %}>
              <span class="lever"></span>
              <span class="ms-2">Vec</span>
            </label>
          </div>
        </div>

      <div class="collapse mt-3" id="advancedFilters">
        <div class="row g-3">
          <div class="col-md-3">
            <div class="form-group">
              <label for="idA2A" class="form-label">ID A2A</label>
              <input class="form-control" id="idA2A" name="idA2A" value="{{ f.idA2A|default('') }}" placeholder="ID A2A">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="idPagamento" class="form-label">ID Pagamento</label>
              <input class="form-control" id="idPagamento" name="idPagamento" value="{{ f.idPagamento|default('') }}" placeholder="ID Pagamento">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="direzione" class="form-label">Direzione</label>
              <input class="form-control" id="direzione" name="direzione" value="{{ f.direzione|default('') }}" placeholder="Direzione">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="divisione" class="form-label">Divisione</label>
              <input class="form-control" id="divisione" name="divisione" value="{{ f.divisione|default('') }}" placeholder="Divisione">
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

  {% if query_made and results %}
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div>
        <strong>Risultati:</strong>
        {% if num_risultati is not null %}
          {{ num_risultati }}
        {% else %}
          --
        {% endif %}
      </div>
      <div class="btn-group">
        {% if prev_url %}
          <a class="btn btn-outline-primary" href="{{ prev_url }}">&laquo; Precedente</a>
        {% endif %}
        {% if next_url %}
          <a class="btn btn-outline-primary" href="{{ next_url }}">Successiva &raquo;</a>
        {% endif %}
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Soggetto</th>
            <th>Causale</th>
            <th>Tipo Pendenza</th>
            <th>Scadenza</th>
            <th class="text-center">Importo</th>
            <th>Stato</th>
            <th class="text-center">Dettaglio</th>
          </tr>
        </thead>
        <tbody>
          {% set hl = highlight_id|default('') %}
          {% for r in results.risultati|default([]) %}
            {% set rid = r.idPendenza|default('') %}
            {% set is_hl = hl and rid and (hl == rid) %}
            <tr id="row-{{ rid }}" class="align-middle{% if is_hl %} table-warning highlight-row{% endif %}">
              <td>
                {% set cf = r.soggettoPagatore.identificativo|default('') %}
                {% set den = r.soggettoPagatore.anagrafica|default(r.soggettoPagatore.denominazione|default('')) %}
                {% if cf %}<strong>{{ cf }}</strong>{% endif %}
                {% if den %}
                  <div class="text-muted small">{{ den }}</div>
                {% endif %}
                {% if not cf and not den %}
                  <span class="text-muted">—</span>
                {% endif %}
              </td>
              <td>{{ r.causale|default(r.nome|default('')) }}</td>
              <td>{{ r.tipoPendenza.descrizione|default('') }}</td>
              <td class="text-nowrap">
                {% set ds = r.dataScadenza|default('') %}
                {% if ds %}
                  {{ ds|date('d/m/Y') }}
                {% else %}
                  —
                {% endif %}
              </td>
              <td class="text-center">{{ r.importo is defined ? (r.importo|number_format(2, ',', '.')) : '' }}</td>
              <td>
                {% set st = r.stato|default('') %}
                {% set conf = pendenza_states[st]|default(null) %}
                {% if conf %}
                  <span class="badge bg-{{ conf.color }}">{{ conf.label }}</span>
                {% else %}
                  <span class="badge bg-secondary">{{ st }}</span>
                {% endif %}
              </td>
              <td class="text-center">
                {% if r.idPendenza is defined and r.idPendenza %}
                  {% set back = return_url|default('/pendenze/ricerca') %}
                  {# Alla fine del ritorno, aggiungi highlight e anchor alla riga #}
                  {% set anchor = '#row-' ~ r.idPendenza %}
                  {% set back_hl = back ~ ('?' in back ? '&' : '?') ~ 'highlight=' ~ (r.idPendenza|url_encode) ~ (anchor) %}
                  <a class="btn btn-outline-primary btn-sm px-2 py-0" href="/pendenze/dettaglio/{{ r.idPendenza|url_encode }}?return={{ back_hl|url_encode }}" title="Dettaglio" aria-label="Dettaglio">
                    <i class="fas fa-eye"></i>
                  </a>
                {% else %}
                  <span class="text-muted">—</span>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr><td colspan="7" class="text-center text-muted">Nessun risultato</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-2">
      <div>
        {% if num_pagine is not null %}
          Pagina {{ f.pagina|default(1) }} di {{ num_pagine }}
        {% endif %}
      </div>
      <div class="btn-group">
        {% if prev_url %}
          <a class="btn btn-outline-primary" href="{{ prev_url }}">&laquo; Precedente</a>
        {% endif %}
        {% if next_url %}
          <a class="btn btn-outline-primary" href="{{ next_url }}">Successiva &raquo;</a>
        {% endif %}
      </div>
    </div>
  {% elseif query_made %}
    <div class="alert alert-warning">Nessun risultato trovato.</div>
  {% endif %}
{% endblock %}
