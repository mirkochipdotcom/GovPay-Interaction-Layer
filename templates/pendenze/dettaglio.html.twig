{% extends 'base.html.twig' %}

{% block title %}Pendenza {{ idPendenza }}{% endblock %}

{% block content %}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="h4 mb-0">Dettaglio pendenza <span class="text-muted">{{ idPendenza }}</span></h2>
    <div class="d-flex gap-2">
      {% set idDom = id_dominio|default(pendenza.idDominio|default('')) %}
      {% if idDom and pendenza.numeroAvviso %}
        <a class="btn btn-primary" href="/avvisi/{{ idDom|url_encode }}/{{ pendenza.numeroAvviso|url_encode }}" target="_blank" rel="noopener" title="Scarica avviso (PDF)">
          <i class="fas fa-file-pdf me-1"></i> Scarica avviso
        </a>
      {% endif %}
      <a class="btn btn-outline-secondary" href="{{ return_url|default('/pendenze/ricerca') }}">&laquo; Torna alla ricerca</a>
    </div>
  </div>

  {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
  {% endif %}

  {% if pendenza %}
    {% set r = pendenza %}
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex flex-wrap align-items-center gap-3">
          <div>
            <div class="text-muted small">Stato</div>
            {% set st = r.stato|default('') %}
            {% set conf = pendenza_states[st]|default(null) %}
            {% if conf %}
              <span class="badge bg-{{ conf.color }}">{{ conf.label }}</span>
            {% else %}
              <span class="badge bg-secondary">{{ st }}</span>
            {% endif %}
          </div>
          <div>
            <div class="text-muted small">Importo</div>
            <div class="h5 mb-0">{{ r.importo is defined ? (r.importo|number_format(2, ',', '.')) ~ ' €' : '—' }}</div>
          </div>
          <div>
            <div class="text-muted small">Scadenza</div>
            {% set ds = r.dataScadenza|default('') %}
            <div class="mb-0">{{ ds ? (ds|date('d/m/Y')) : '—' }}</div>
          </div>
          <div>
            <div class="text-muted small">Validità</div>
            {% set dv = r.dataValidita|default('') %}
            <div class="mb-0">{{ dv ? (dv|date('d/m/Y')) : '—' }}</div>
          </div>
          {% if r.dataPagamento is defined and r.dataPagamento %}
          <div>
            <div class="text-muted small">Pagamento</div>
            <div class="mb-0">{{ r.dataPagamento|date('d/m/Y') }}</div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-header">Soggetto pagatore</div>
          <div class="card-body">
            {% set sogg = r.soggettoPagatore|default({}) %}
            {% set tipo = sogg.tipo|default('') %}
            {% if tipo != 'F' and tipo != 'G' %}
              {% set tipo = sogg.denominazione ? 'G' : 'F' %}
            {% endif %}
            <div>
              <span class="badge rounded-pill bg-secondary me-1" title="{{ tipo == 'F' ? 'Persona fisica' : 'Persona giuridica' }}">{{ tipo }}</span>
              <span class="text-muted">Identificativo:</span> <strong>{{ sogg.identificativo|default('—') }}</strong>
            </div>
            <div><span class="text-muted">Anagrafica:</span> {{ sogg.anagrafica|default(sogg.denominazione|default('—')) }}</div>
            {% if sogg.email %}<div><span class="text-muted">Email:</span> {{ sogg.email }}</div>{% endif %}
            {% set parti = [] %}
            {% if sogg.indirizzo %}{% set parti = parti|merge([sogg.indirizzo]) %}{% endif %}
            {% if sogg.civico %}{% set parti = parti|merge([sogg.civico]) %}{% endif %}
            {% if sogg.localita %}{% set parti = parti|merge([sogg.localita]) %}{% endif %}
            {% if sogg.provincia %}{% set parti = parti|merge([sogg.provincia]) %}{% endif %}
            {% if sogg.nazione %}{% set parti = parti|merge([sogg.nazione]) %}{% endif %}
            {% if parti|length > 0 %}<div><span class="text-muted">Indirizzo:</span> {{ parti|join(', ') }}</div>{% endif %}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-header">Dettagli pendenza</div>
          <div class="card-body">
            <div><span class="text-muted">Causale:</span> {{ r.causale|default(r.nome|default('—')) }}</div>
            <div><span class="text-muted">Tipo:</span> {{ r.tipoPendenza.descrizione|default('—') }}</div>
            <div><span class="text-muted">Numero avviso:</span> {{ r.numeroAvviso|default('—') }}</div>
            {% if r.idPagamento %}<div><span class="text-muted">ID Pagamento:</span> {{ r.idPagamento }}</div>{% endif %}
          </div>
        </div>
      </div>
    </div>

    {# Collapse RPP: tentativi di pagamento #}
    {% set rpp = r.rpp|default([]) %}
    {% if rpp is iterable and rpp|length > 0 %}
      <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Tentativi di pagamento ({{ rpp|length }})</span>
          <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#rppCollapse" aria-expanded="false" aria-controls="rppCollapse">Mostra/Nascondi</button>
        </div>
        <div class="collapse" id="rppCollapse">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped align-middle">
                <thead>
                  <tr>
                    <th>Identificativo pagamento</th>
                    <th>Data e ora</th>
                    <th>Stato</th>
                    <th class="text-end">Importo</th>
                    <th>ABI</th>
                    <th>Istituto</th>
                    <th class="text-center">Ricevuta</th>
                  </tr>
                </thead>
                <tbody>
                {% for t in rpp %}
                  {% set idPago = t.identificativoPagamento|default(t.idPagamento|default('')) %}
                  {% set dataOp = t.data|default(t.dataOperazione|default('')) %}
                  {% set importo = t.importo|default(t.importoPagato|default(null)) %}
                  {% set abi = t.abi|default('') %}
                  {% set istituto = t.istituto|default(t.denominazionePsp|default('')) %}
                  {% set stato = t.stato|default(t.esito|default('')) %}
                  {% set iuv = r.iuv|default('') %}
                  {% set idDom = id_dominio|default(r.idDominio|default('')) %}
                  {% set idRicevuta = t.idRicevuta|default(t.identificativoRicevuta|default('')) %}
                  <tr>
                    <td>{{ idPago ?: '—' }}</td>
                    <td class="text-nowrap">{% if dataOp %}{{ dataOp|date('d/m/Y H:i') }}{% else %}—{% endif %}</td>
                    <td>{{ stato ?: '—' }}</td>
                    <td class="text-end">{% if importo is not null %}{{ importo|number_format(2, ',', '.') }} €{% else %}—{% endif %}</td>
                    <td>{{ abi ?: '—' }}</td>
                    <td>{{ istituto ?: '—' }}</td>
                    <td class="text-center">
                      {% if idDom and iuv and idRicevuta %}
                        <a class="btn btn-outline-primary btn-sm px-2 py-0" href="/pagamenti/ricevute/{{ idDom|url_encode }}/{{ iuv|url_encode }}/{{ idRicevuta|url_encode }}" title="Scarica ricevuta" aria-label="Scarica ricevuta">
                          <i class="fas fa-file-pdf"></i>
                        </a>
                      {% else %}
                        <span class="text-muted">—</span>
                      {% endif %}
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    {% if app_debug %}
      <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Dati raw</span>
          <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#rawCollapse" aria-expanded="false" aria-controls="rawCollapse">Mostra/Nascondi</button>
        </div>
        <div class="collapse" id="rawCollapse">
          <div class="card-body">
            <pre class="mb-0">{{ pendenza|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_SLASHES')) }}</pre>
          </div>
        </div>
      </div>
    {% endif %}
  {% else %}
    {% if not error %}
      <div class="alert alert-warning">Nessun dato pendenza disponibile.</div>
    {% endif %}
  {% endif %}

  <div class="mt-3">
    <a class="btn btn-outline-secondary" href="{{ return_url|default('/pendenze/ricerca') }}">&laquo; Torna alla ricerca</a>
  </div>
{% endblock %}
