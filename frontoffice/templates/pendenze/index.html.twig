{% extends 'base.html.twig' %}

{% block title %}Le mie pendenze - {{ app_entity.name }}{% endblock %}

{% block head %}
  <style>
    body { background: #f4f6fb; }
    .pendenze-hero {
      background: linear-gradient(135deg, #05193d 0%, #003a6d 50%, #0062b8 100%);
      color: #fff;
      border-radius: 24px;
      box-shadow: 0 25px 60px rgba(9, 26, 62, 0.12);
    }
    .pendenze-hero .btn { border-radius: 999px; font-weight: 600; }
    .metric-card {
      border-radius: 20px;
      border: none;
      box-shadow: 0 20px 50px rgba(9, 26, 62, 0.08);
    }
    .filters-surface {
      border-radius: 20px;
      border: 1px solid rgba(9, 26, 62, 0.10);
      background: rgba(255, 255, 255, 0.85);
      box-shadow: none;
      backdrop-filter: blur(6px);
    }
    .filters-surface .form-select {
      background-color: #fff;
    }
    /* Compat: Bootstrap 5 usa .visually-hidden; qui aggiungiamo anche .sr-only per richiesta UI */
    .sr-only {
      position: absolute !important;
      width: 1px !important;
      height: 1px !important;
      padding: 0 !important;
      margin: -1px !important;
      overflow: hidden !important;
      clip: rect(0, 0, 0, 0) !important;
      white-space: nowrap !important;
      border: 0 !important;
    }
    /* Cart sticky bar */
    #carrello-bar {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 1050;
      background: #05193d;
      color: #fff;
      padding: 14px 24px;
      display: none;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 12px;
      box-shadow: 0 -4px 24px rgba(0,0,0,.25);
    }
    #carrello-bar.visible { display: flex; }
    #carrello-bar .bar-info { font-size: .95rem; }
    #carrello-bar .bar-info strong { font-size: 1.1rem; }
    #carrello-bar .btn-paga {
      background: #f5a623;
      color: #05193d;
      font-weight: 700;
      border: none;
      border-radius: 999px;
      padding: 10px 28px;
      font-size: 1rem;
    }
    #carrello-bar .btn-paga:disabled { opacity: .5; cursor: not-allowed; }
    /* Checkbox column */
    .col-sel { width: 44px; }
    .row-payable:hover { background: rgba(9, 26, 62, 0.03); }
    .pendenza-checkbox { width: 18px; height: 18px; cursor: pointer; accent-color: #0062b8; }
    .pendenza-checkbox:disabled { opacity: .4; cursor: not-allowed; }
  </style>
{% endblock %}

{% set items = pendenze|default([]) %}
{% set stato = filters.stato|default('') %}
{% set pagina = pagination.pagina|default(1) %}
{% set per_pagina = pagination.risultati_per_pagina|default(25) %}
{% set num_risultati = pagination.num_risultati|default(0) %}

{% block content %}
  <div class="container-xxl py-4">
    <nav aria-label="Percorso" class="mb-3">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Le mie pendenze</li>
      </ol>
    </nav>

    <div class="pendenze-hero p-4 p-lg-5 mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
        <div>
          <p class="text-uppercase small mb-2 text-white-50">Area personale</p>
          <h1 class="h3 mb-1">Le mie pendenze</h1>
          <div class="text-white-50">Codice fiscale: <strong class="text-white">{{ codice_fiscale|default('') }}</strong></div>
          <div class="text-white-50 small mt-2">Da qui puoi consultare lo stato, scaricare l'avviso e (quando disponibile) la ricevuta di pagamento.</div>
        </div>
        <div class="d-flex flex-wrap gap-2">
          <a class="btn btn-warning text-dark" href="/pagamento-avviso">Paga un avviso</a>
          <a class="btn btn-outline-light" href="/pagamento-spontaneo">Pagamento spontaneo</a>
          <a class="btn btn-outline-light" href="/profile">Profilo</a>
          <a class="btn btn-outline-light" href="/logout">Logout</a>
        </div>
      </div>
    </div>

    <div class="filters-surface p-3 p-lg-4 mb-4">
      <form class="row gy-2 gx-3 align-items-end" method="get" action="/pendenze">
          <div class="col-12 col-md-4">
            <label class="form-label" for="stato">Stato</label>
            <select class="form-select" id="stato" name="stato">
              <option value="" {{ stato == '' ? 'selected' : '' }}>Tutti</option>
              <option value="NON_ESEGUITA" {{ stato == 'NON_ESEGUITA' ? 'selected' : '' }}>Da pagare</option>
              <option value="ESEGUITA_PARZIALE" {{ stato == 'ESEGUITA_PARZIALE' ? 'selected' : '' }}>Pagata parzialmente</option>
              <option value="ESEGUITA" {{ stato == 'ESEGUITA' ? 'selected' : '' }}>Pagata</option>
              <option value="SCADUTA" {{ stato == 'SCADUTA' ? 'selected' : '' }}>Scaduta</option>
              <option value="ANNULLATA" {{ stato == 'ANNULLATA' ? 'selected' : '' }}>Annullata</option>
              <option value="ANOMALA" {{ stato == 'ANOMALA' ? 'selected' : '' }}>In verifica</option>
            </select>
          </div>

          <div class="col-12 col-md-3">
            <label class="form-label" for="per_page">Risultati per pagina</label>
            <select class="form-select" id="per_page" name="per_page">
              {% for n in [10,25,50,100] %}
                <option value="{{ n }}" {{ per_pagina == n ? 'selected' : '' }}>{{ n }}</option>
              {% endfor %}
            </select>
          </div>

          <div class="col-12 col-md-auto ms-md-auto d-flex gap-2">
            <button class="btn btn-primary" type="submit">Aggiorna</button>
            <a class="btn btn-outline-secondary" href="/pendenze">Reset</a>
          </div>
      </form>
    </div>

    <div class="card shadow-sm">
      <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
        <span class="fw-semibold">Elenco</span>
        <span class="text-muted small" id="carrello-hint" style="display:none">
          <i class="fa-solid fa-cart-shopping me-1"></i>Seleziona fino a 5 pendenze pagabili e clicca "Paga selezionate"
        </span>
      </div>
      <div class="card-body p-0">
        {% if items is empty %}
          <div class="p-4">
            <div class="alert alert-info mb-0" role="status">Nessuna pendenza trovata.</div>
          </div>
        {% else %}
          {# Hidden form for cart POST #}
          <form id="carrello-form" method="post" action="/carrello/checkout" style="display:none">
            <input type="hidden" name="csrf_token" id="csrf_token_field" value="">
          </form>

          <div class="table-responsive">
            <table class="table table-striped mb-0 align-middle">
              <thead>
                <tr>
                  <th class="col-sel">
                    <span class="sr-only">Seleziona</span>
                  </th>
                  <th>Numero avviso</th>
                  <th>Causale</th>
                  <th class="text-end">Importo</th>
                  <th>Scadenza</th>
                  <th>Stato</th>
                  <th class="text-end">Azioni</th>
                </tr>
              </thead>
              <tbody>
                {% for p in items %}
                  {% set is_payable = p.stato.code in ['NON_ESEGUITA', 'ESEGUITA_PARZIALE'] %}
                  <tr class="{{ is_payable ? 'row-payable' : '' }}">
                    <td class="col-sel text-center">
                      {% if is_payable and p.id_pendenza %}
                        <input
                          class="pendenza-checkbox"
                          type="checkbox"
                          name="pendenze[]"
                          value="{{ p.id_pendenza }}"
                          data-importo="{{ p.importo is not null ? (p.importo * 100)|round(0, 'floor') : 0 }}"
                          aria-label="Seleziona pendenza {{ p.numero_avviso|default(p.id_pendenza) }}"
                          form="carrello-form"
                        >
                      {% endif %}
                    </td>
                    <td>
                      {% if p.numero_avviso %}
                        <span class="font-monospace">{{ p.numero_avviso }}</span>
                      {% else %}
                        <span class="text-muted">—</span>
                      {% endif %}
                    </td>
                    <td>
                      <div class="fw-semibold">{{ p.causale|default('—') }}</div>
                    </td>
                    <td class="text-end">
                      {% if p.importo is not null %}
                        € {{ p.importo|number_format(2, ',', '.') }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td>
                      {% if p.data_scadenza %}
                        {{ p.data_scadenza|date('d/m/Y') }}
                      {% else %}
                        <span class="text-muted">—</span>
                      {% endif %}
                    </td>
                    <td>
                      {% set badge = p.stato.code in ['NON_ESEGUITA','ESEGUITA_PARZIALE'] ? 'bg-success' : (p.stato.code in ['SCADUTA','ANOMALA'] ? 'bg-warning text-dark' : 'bg-secondary') %}
                      <span class="badge {{ badge }}">{{ p.stato.label|default('—') }}</span>
                    </td>
                    <td class="text-end">
                      <div class="btn-group" role="group" aria-label="Azioni pendenza">
                        {% if p.detail_url %}
                          <a class="btn btn-sm btn-outline-primary" href="{{ p.detail_url }}">
                            <i class="fa-solid fa-circle-info" aria-hidden="true"></i>
                            <span class="sr-only">Dettaglio</span>
                          </a>
                        {% endif %}
                        {% if p.download_url %}
                          <a class="btn btn-sm btn-outline-secondary" href="{{ p.download_url }}" target="_blank" rel="noopener">
                            <i class="fa-solid fa-file-pdf" aria-hidden="true"></i>
                            <span class="sr-only">Scarica PDF avviso</span>
                          </a>
                        {% endif %}
                        {% if p.receipt_url %}
                          <a class="btn btn-sm btn-outline-success" href="{{ p.receipt_url }}">
                            <i class="fa-solid fa-receipt" aria-hidden="true"></i>
                            <span class="sr-only">Scarica ricevuta</span>
                          </a>
                        {% endif %}
                      </div>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% endif %}
      </div>
      <div class="card-footer d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div class="text-muted small">Pagina {{ pagination.pagina }} di {{ pagination.total_pages|default(1) }}</div>
        <div class="d-flex gap-2">
          <a class="btn btn-sm btn-outline-secondary {{ pagination.pagina <= 1 ? 'disabled' : '' }}" href="?page={{ pagination.pagina - 1 }}&per_page={{ pagination.risultati_per_pagina }}{% if filters.stato %}&stato={{ filters.stato }}{% endif %}" {% if pagination.pagina <= 1 %}aria-disabled="true" tabindex="-1"{% endif %}>Precedente</a>
          <a class="btn btn-sm btn-outline-secondary {{ pagination.pagina >= (pagination.total_pages|default(1)) ? 'disabled' : '' }}" href="?page={{ pagination.pagina + 1 }}&per_page={{ pagination.risultati_per_pagina }}{% if filters.stato %}&stato={{ filters.stato }}{% endif %}" {% if pagination.pagina >= (pagination.total_pages|default(1)) %}aria-disabled="true" tabindex="-1"{% endif %}>Successiva</a>
        </div>
      </div>
    </div>
  </div>

  {# ── Sticky Cart Bar ── #}
  <div id="carrello-bar" role="status" aria-live="polite">
    <div class="bar-info">
      <i class="fa-solid fa-cart-shopping me-2"></i>
      <strong id="bar-count">0</strong> pendenz<span id="bar-plural">a</span> selezionata<span id="bar-plural-e"></span>
      &nbsp;·&nbsp;
      Totale: <strong id="bar-total">€ 0,00</strong>
    </div>
    <div class="d-flex align-items-center gap-3">
      <button type="button" class="btn btn-outline-light btn-sm" id="deseleziona-btn">Deseleziona tutto</button>
      <button type="submit" form="carrello-form" class="btn-paga" id="paga-btn">
        <i class="fa-solid fa-lock me-1"></i>Paga selezionate
      </button>
    </div>
  </div>

  <script>
  (function () {
    const MAX_SEL = 5;
    const bar = document.getElementById('carrello-bar');
    const hint = document.getElementById('carrello-hint');
    const countEl = document.getElementById('bar-count');
    const totalEl = document.getElementById('bar-total');
    const pluralEl = document.getElementById('bar-plural');
    const pluralEEl = document.getElementById('bar-plural-e');
    const deselBtn = document.getElementById('deseleziona-btn');
    const checkboxes = Array.from(document.querySelectorAll('.pendenza-checkbox'));

    function formatEuro(cents) {
      const euros = cents / 100;
      return '€\u00a0' + euros.toFixed(2).replace('.', ',').replace(/\B(?=(\d{3})+(?!\d))/g, '.');
    }

    function update() {
      const selected = checkboxes.filter(cb => cb.checked);
      const count = selected.length;
      const totalCents = selected.reduce((s, cb) => s + parseInt(cb.dataset.importo || '0', 10), 0);

      countEl.textContent = count;
      totalEl.textContent = formatEuro(totalCents);
      pluralEl.textContent = count === 1 ? 'a' : 'e';
      pluralEEl.textContent = count === 1 ? '' : '';

      if (count > 0) {
        bar.classList.add('visible');
        if (hint) hint.style.display = '';
        document.body.style.paddingBottom = '80px';
      } else {
        bar.classList.remove('visible');
        document.body.style.paddingBottom = '';
      }

      // Disable unchecked boxes if limit reached
      checkboxes.forEach(cb => {
        if (!cb.checked) {
          cb.disabled = count >= MAX_SEL;
        }
      });
    }

    checkboxes.forEach(cb => cb.addEventListener('change', update));

    deselBtn?.addEventListener('click', () => {
      checkboxes.forEach(cb => { cb.checked = false; cb.disabled = false; });
      update();
    });

    // Show hint if any payable pendenze exist
    if (checkboxes.length > 0 && hint) hint.style.display = '';

    update();
  })();
  </script>
{% endblock %}
