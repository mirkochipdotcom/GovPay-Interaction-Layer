{% extends "base.html.twig" %}

{% block title %}{{ 'Profilo'|trans }}{% endblock %}

{% block content %}
  <div class="container-xxl py-4">
    <div class="row">
      <div class="col-12 col-lg-8">
        <h1 class="h3 mb-3">{{ 'Profilo'|trans }}</h1>

        <div class="card shadow-sm">
          <div class="card-body">
            <dl class="row mb-0">
              <dt class="col-sm-4">{{ 'Nome'|trans }}</dt>
              <dd class="col-sm-8">{{ profile.first_name|default('') }}</dd>

              <dt class="col-sm-4">{{ 'Cognome'|trans }}</dt>
              <dd class="col-sm-8">{{ profile.last_name|default('') }}</dd>

              <dt class="col-sm-4">{{ 'Email'|trans }}</dt>
              <dd class="col-sm-8">{{ profile.email|default('') }}</dd>

              <dt class="col-sm-4">{{ 'Codice fiscale'|trans }}</dt>
              <dd class="col-sm-8">{{ profile.fiscal_number|default('') }}</dd>

              <dt class="col-sm-4">{{ 'IdP'|trans }}</dt>
              <dd class="col-sm-8">{{ profile.provider_name|default(profile.provider_id|default('')) }}</dd>
            </dl>
          </div>
        </div>

        <div class="mt-3">
          <a class="btn btn-outline-primary" href="/">{{ 'Torna alla home'|trans }}</a>
          <a class="btn btn-outline-primary" href="/pendenze">{{ 'Le mie pendenze'|trans }}</a>
          <a class="btn btn-outline-danger" href="/logout">{{ 'Logout'|trans }}</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
