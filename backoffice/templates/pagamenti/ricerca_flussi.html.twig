{% extends 'base.html.twig' %}

{% block title %}Pagamenti - Ricerca Flussi{% endblock %}

{% block content %}
  {% if errors is defined and errors %}
    <div class="alert alert-danger" role="alert">
      <ul class="mb-0">
        {% for e in errors %}<li>{{ e }}</li>{% endfor %}
      </ul>
    </div>
  {% endif %}

  {% set f = filters ?? {} %}
  {% set ord = f.ordinamento|default('-data') %}
  {% set highlight = highlight_id|default('') %}
  <form method="get" action="/pagamenti/ricerca-flussi" class="card shadow-sm mb-4">
    <input type="hidden" name="q" value="1" />
    <div class="card-header bg-light border-bottom py-3">
      <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-between gap-1">
        <h2 class="h5 mb-0">Ricerca flussi di rendicontazione</h2>
        <p class="mb-0 text-muted small">Compila uno o più campi</p>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="form-group col-md-4">
          <label for="idFlusso">ID flusso</label>
          <input type="text" class="form-control" id="idFlusso" name="idFlusso" value="{{ f.idFlusso|default('') }}" placeholder="ID flusso">
        </div>
        <div class="form-group col-md-4">
          <label for="iuv">IUV</label>
          <input type="text" class="form-control" id="iuv" name="iuv" value="{{ f.iuv|default('') }}" placeholder="IUV">
        </div>
        <div class="form-group col-md-4">
          <div class="select-wrapper">
            <label for="statoFlusso">Stato flusso</label>
            <select id="statoFlusso" name="statoFlusso">
              <option value="">-- tutti --</option>
              <option value="ACQUISITO" {% if f.statoFlusso is defined and f.statoFlusso == 'ACQUISITO' %}selected{% endif %}>ACQUISITO</option>
              <option value="ELABORATO" {% if f.statoFlusso is defined and f.statoFlusso == 'ELABORATO' %}selected{% endif %}>ELABORATO</option>
              <option value="SCARTATO" {% if f.statoFlusso is defined and f.statoFlusso == 'SCARTATO' %}selected{% endif %}>SCARTATO</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <label for="dateRangeInput">Intervallo date</label>
          <input type="text" id="dateRangeInput" class="form-control" placeholder="Seleziona intervallo" autocomplete="off" inputmode="none" data-has-query="{{ query_made ? '1' : '0' }}">
          <input type="hidden" id="dataDa" name="dataDa" value="{{ f.dataDa|default('') }}">
          <input type="hidden" id="dataA" name="dataA" value="{{ f.dataA|default('') }}">
          <div id="dateRangePanel" class="card shadow-sm date-range-panel d-none">
            <div class="card-body p-3">
              <div class="row g-2 align-items-center">
                <div class="col-6">
                  <label for="dateStart" class="form-label mb-1">Da</label>
                  <input type="date" id="dateStart" class="form-control">
                </div>
                <div class="col-6">
                  <label for="dateEnd" class="form-label mb-1">A</label>
                  <input type="date" id="dateEnd" class="form-control">
                </div>
              </div>
              <div class="d-flex flex-wrap align-items-center gap-2 mt-3">
                <span class="small text-muted fw-semibold">Periodo:</span>
                <button type="button" class="btn btn-outline-primary btn-xs" data-range="week">Settimana</button>
                <button type="button" class="btn btn-outline-primary btn-xs" data-range="month">Mese</button>
                <button type="button" class="btn btn-outline-primary btn-xs" data-range="year">Anno</button>
                <button type="button" class="btn btn-outline-secondary btn-xs" data-range="all">Azzera</button>
                <button type="button" class="btn btn-primary btn-xs ms-auto" data-action="apply">Applica</button>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group col-md-4">
          <div class="select-wrapper">
            <label for="incassato">Solo incassati</label>
            <select id="incassato" name="incassato">
              <option value="">-- tutti --</option>
              <option value="true" {% if f.incassato is defined and f.incassato == 'true' %}selected{% endif %}>Sì</option>
              <option value="false" {% if f.incassato is defined and f.incassato == 'false' %}selected{% endif %}>No</option>
            </select>
          </div>
        </div>
        <div class="form-group col-md-4 d-flex flex-column">
          <div class="select-wrapper">
            <label for="ordinamento" class="small mb-0 text-muted">Ordina per</label>
            <select id="ordinamento" name="ordinamento" data-default-value="-data">
              <option value="-data" {% if ord == '-data' %}selected{% endif %}>Data flusso (più recenti prima)</option>
              <option value="+data" {% if ord == '+data' %}selected{% endif %}>Data flusso (più vecchie prima)</option>
            </select>
          </div>
        </div>
      </div>

      <div class="row g-3 mt-1">
        <div class="col-12 col-lg-auto d-flex flex-wrap align-items-center gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-search me-1"></i> Cerca
          </button>
          <a class="btn btn-outline-secondary" href="/pagamenti/ricerca-flussi?reset=1">
            <i class="fas fa-eraser me-1"></i> Azzera
          </a>
          <button class="btn btn-link px-0" type="button" data-bs-toggle="collapse" data-bs-target="#advancedFiltersFlussi" aria-expanded="false" aria-controls="advancedFiltersFlussi">
            <i class="fas fa-sliders-h me-1"></i> Filtri avanzati
          </button>
        </div>
      </div>

      <div class="collapse mt-4" id="advancedFiltersFlussi">
        <fieldset class="row g-4">
          <legend class="visually-hidden">Filtri avanzati flussi</legend>
          <div class="col-12 col-lg-6 col-xl-3">
            <div class="form-group">
              <label for="idDominio">ID Dominio</label>
              <input type="text" class="form-control" id="idDominio" name="idDominio" value="{{ f.idDominio|default('') }}" placeholder="ID Dominio">
            </div>
          </div>
          <div class="col-12 col-lg-6 col-xl-3">
            <div class="form-group">
              <label for="idA2A">ID A2A</label>
              <input type="text" class="form-control" id="idA2A" name="idA2A" value="{{ f.idA2A|default('') }}" placeholder="ID A2A">
            </div>
          </div>
          <div class="col-12 col-lg-6 col-xl-3">
            <div class="form-group form-check mt-4">
              <input type="checkbox" class="form-check-input" id="escludiObsoleti" name="escludiObsoleti" value="true" {% if f.escludiObsoleti is defined and f.escludiObsoleti %}checked{% endif %}>
              <label class="form-check-label" for="escludiObsoleti">Escludi flussi obsoleti</label>
            </div>
          </div>
        </fieldset>
      </div>
    </div>
  </form>

  {% if query_made and results %}
    <div class="card shadow-sm">
      <div class="card-header bg-light border-bottom py-3">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-between gap-2">
          <div>
            <h3 class="h6 text-uppercase text-secondary mb-1">Risultati</h3>
            <p class="mb-0 small text-muted">Elenco dei flussi di rendicontazione</p>
          </div>
          <div class="d-flex align-items-center gap-2">
            <span class="badge rounded-pill text-bg-primary">
              {% if num_risultati is not null %}
                {{ num_risultati }}
              {% else %}
                --
              {% endif %}
            </span>
            {% if prev_url or next_url %}
              <div class="btn-group btn-group-sm" role="group" aria-label="Paginazione rapida">
                {% if prev_url %}
                  <a class="btn btn-outline-primary" href="{{ prev_url }}" title="Vai alla pagina precedente">&laquo;</a>
                {% endif %}
                {% if next_url %}
                  <a class="btn btn-outline-primary" href="{{ next_url }}" title="Vai alla pagina successiva">&raquo;</a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">ID flusso</th>
              <th scope="col">Data caricamento</th>
              <th scope="col">Dominio</th>
              <th scope="col">Stato</th>
              <th scope="col" class="text-end">Importo totale</th>
              <th scope="col" class="text-end">Numero pagamenti</th>
              <th scope="col" class="text-center">Dettaglio</th>
            </tr>
          </thead>
          <tbody>
            {% for r in results.risultati|default([]) %}
              {% set rid = r.idFlusso|default(r.id_flusso|default('')) %}
              {% set domId = r.dominio.idDominio|default(r.idDominio|default('')) %}
              {% set dataFlusso = r.dataFlusso|default(r.data|default('')) %}
              {% set is_hl = highlight and rid and highlight == rid %}
              <tr id="row-{{ rid|e('html_attr') }}" class="align-middle{% if is_hl %} table-warning highlight-row{% endif %}">
                <td class="text-break">{{ rid }}</td>
                <td class="text-nowrap">{% if dataFlusso %}{{ dataFlusso|date('d/m/Y H:i') }}{% else %}—{% endif %}</td>
                <td class="text-break">{{ domId }}</td>
                <td>{{ r.stato|default(r.statoFlusso|default('')) }}</td>
                <td class="text-end">{% set imp = r.importoTotale|default(r.importo_totale|default(0)) %}{{ imp|number_format(2, ',', '.') }}</td>
                <td class="text-end">{{ r.numeroPagamenti|default(r.num_pagamenti|default('')) }}</td>
                <td class="text-center">
                  {% if rid %}
                    {% set base_return = return_url|default('/pagamenti/ricerca-flussi') %}
                    {% set sep = '?' in base_return ? '&' : '?' %}
                    {% set back_target = base_return ~ sep ~ 'highlight=' ~ rid ~ '#row-' ~ rid %}
                    <a class="btn btn-outline-primary btn-sm px-2" href="/pagamenti/ricerca-flussi/dettaglio/{{ rid|url_encode }}?return={{ back_target|url_encode }}" title="Dettaglio flusso" aria-label="Apri dettaglio del flusso">
                      <i class="fas fa-eye"></i>
                    </a>
                  {% else %}
                    <span class="text-muted">—</span>
                  {% endif %}
                </td>
              </tr>
            {% else %}
              <tr><td colspan="7" class="text-center text-muted">Nessun risultato</td></tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="card-footer bg-white border-top py-3">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-between gap-2">
          <div class="small text-muted">
            {% if num_pagine is not null %}
              Pagina {{ f.pagina|default(1) }} di {{ num_pagine }}
            {% else %}
              Navigazione risultati
            {% endif %}
          </div>
          {% if prev_url or next_url %}
            <div class="btn-group" role="group" aria-label="Paginazione dettagliata">
              {% if prev_url %}
                <a class="btn btn-outline-primary" href="{{ prev_url }}">&laquo; Precedente</a>
              {% endif %}
              {% if next_url %}
                <a class="btn btn-outline-primary" href="{{ next_url }}">Successiva &raquo;</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% if app_debug %}
      <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center gap-2">
            <span class="badge bg-warning text-dark">Debug</span>
            <span>Dati raw risultati</span>
          </div>
          <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#rawSearchCollapse" aria-expanded="false" aria-controls="rawSearchCollapse">
            Mostra/Nascondi
          </button>
        </div>
        <div id="rawSearchCollapse" class="collapse">
          <div class="card-body">
            <pre class="small text-break mb-0">{{ results|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_SLASHES')) }}</pre>
          </div>
        </div>
      </div>
    {% endif %}
  {% elseif query_made %}
    <div class="alert alert-warning">Nessun risultato trovato.</div>
  {% endif %}
{% endblock %}
