{% extends 'base.html.twig' %}

{% block title %}Reimposta password â€” {{ parent() }}{% endblock %}

{% block content %}
<div class="container my-5" style="max-width: 480px;">
  <h1 class="h3 mb-4">Reimposta la password</h1>

  {% if token_error is defined and token_error %}
    {# Token invalido o scaduto #}
    <div class="alert alert-danger">
      <strong>Link non valido.</strong><br>
      {{ error }}
    </div>
    <a href="/password-dimenticata" class="btn btn-primary mt-2">Richiedi un nuovo link</a>

  {% else %}
    {% if error %}
      <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <p class="text-muted mb-4">Scegli una nuova password di almeno 8 caratteri.</p>

    <form method="post" action="/reset-password">
      <input type="hidden" name="token" value="{{ token|e }}">

      <div class="mb-3">
        <label for="password" class="form-label">Nuova password</label>
        <input type="password" class="form-control" id="password" name="password"
               required minlength="8" autofocus autocomplete="new-password">
      </div>

      <div class="mb-4">
        <label for="password_confirm" class="form-label">Conferma password</label>
        <input type="password" class="form-control" id="password_confirm" name="password_confirm"
               required minlength="8" autocomplete="new-password">
      </div>

      <div class="d-flex align-items-center gap-3">
        <button type="submit" class="btn btn-primary">Salva nuova password</button>
        <a href="/login" class="text-muted small">Annulla</a>
      </div>
    </form>
  {% endif %}
</div>
{% endblock %}
