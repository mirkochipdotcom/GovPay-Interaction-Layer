<!DOCTYPE html>
<html lang="it">
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title id="tab-title">Accedi</title>
  <meta name="description" content="" id="tab-title">

  <link rel="stylesheet" href="/static/css/style.css">
  <!-- Bootstrap Italia CSS -->
  <link href="/static/css/bootstrap-italia.min.css" rel="stylesheet">
  <!-- ita-bayon CSS -->
  <link href="/static/css/ita.min.css" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/static/spid/spid-sp-access-button.css">

  <script src="https://cdn.jsdelivr.net/npm/i18next-http-backend@1.3.1/i18nextHttpBackend.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/i18next@25.5.2/i18next.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="js/ita.min.js"></script>
  <script src="js/bootstrap-italia.bundle.min.js"></script>

  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background-color: #f2f2f2;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    main {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem 1rem;
    }

    header svg.icon {
      width: 32px;
      height: 32px;
    }

    footer {
      margin-top: auto;
      padding: 2rem 1rem;
      background-color: #0072CE;
      color: white;
    }

    footer .container {
      text-align: center;
    }

    .login-container {
      background-color: white;
      border-radius: 4px;
      padding: 3rem 2.5rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      width: 100%;
    }

    .login-title {
      text-align: center;
      margin-bottom: 1.5rem;
      font-size: 1.75rem;
      font-weight: 700;
      color: #333;
    }

    .login-description {
      text-align: center;
      margin-bottom: 2.5rem;
      font-size: 1rem;
      color: #666;
      line-height: 1.5;
    }

    .spid-login-wrap {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 1rem;
    }

    .spid-helper {
      font-size: 0.95rem;
      color: #555;
      text-align: center;
      margin: 0;
    }

    .wallet-section {
      /* wallets.js doesn't create this class, so this is just a placeholder */
    }

    .wallet-section h3 {
      margin-top: 2rem;
      margin-bottom: 1.5rem;
      font-size: 1.25rem;
      font-weight: 600;
      color: #333;
      text-align: center;
    }

    .wallet-section .row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      align-items: center;
    }

    .wallet-box {
      display: block;
      padding: 1.5rem;
      border: 1px solid #e0e0e0;
      border-radius: 4px;
      background-color: #f9f9f9;
      text-decoration: none;
      color: inherit;
      transition: all 0.2s ease;
      cursor: pointer;
      text-align: center;
      min-height: 120px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .wallet-box:hover {
      background-color: #f0f8ff;
      border-color: #0072CE;
      box-shadow: 0 4px 12px rgba(0, 114, 206, 0.15);
      transform: translateY(-2px);
    }

    .wallet-box svg {
      width: 48px;
      height: 48px;
      margin-bottom: 1rem;
      display: inline-block;
    }

    .wallet-box strong {
      display: block;
      font-weight: 600;
      font-size: 1rem;
      color: #333;
    }

    .wallet-box p {
      margin: 0.5rem 0 0 0;
      font-size: 0.85rem;
      color: #666;
    }

    @media (max-width: 768px) {
      .wallet-section .row {
        grid-template-columns: 1fr;
      }

      .login-container {
        padding: 2rem 1.5rem;
      }

      .login-title {
        font-size: 1.5rem;
      }

      main {
        padding: 2rem 1rem;
      }
    }

    @media (max-width: 480px) {
      .login-container {
        padding: 1.5rem 1rem;
      }

      .login-title {
        font-size: 1.25rem;
      }

      .login-description {
        font-size: 0.9rem;
      }

      .wallet-box {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <!-- HEADER -->
  <header class="it-header-wrapper">
    <div class="it-header-slim-wrapper bg-primary">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center" style="padding: 0.5rem 0;">
          <span class="d-none d-lg-block text-white" style="font-weight: 600;">
            <span id="organization-name">Accedi</span>
          </span>
          <div>
            <select id="lang-select" class="form-select form-select-sm" style="background-color: #0072CE; color: white; border: none; width: 80px;">
              <option value="it" selected>ITA</option>
              <option value="en">EN</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- MAIN CONTENT -->
  <main class="container">
    <div class="login-container">
      <h1 class="login-title" id="wallet-title">Accedi</h1>
      <p class="login-description" id="wallet-description">Seleziona il metodo di accesso per continuare</p>
      
      <div class="spid-login-wrap">
        <button class="italia-it-button italia-it-button-size-xl button-spid" type="button" spid-idp-button="#spid-idp-button-xlarge-post" data-horizontal-offset="0" data-vertical-offset="10">
          <span class="italia-it-button-icon">
            <img src="/static/spid/spid-ico-circle-bb.svg" alt="" aria-hidden="true">
          </span>
          <span class="italia-it-button-text" id="spid-login-text">Entra con SPID</span>
        </button>
        <p class="spid-helper" id="spid-helper-text">Seleziona il tuo Identity Provider SPID dall’elenco.</p>
      </div>

      <div id="spid-idp-button-xlarge-post" class="spid-idp-button spid-idp-button-tip spid-idp-button-relative spid-idp-button-scroll">
        <ul id="spid-idp-list-xlarge-root-post" class="spid-idp-button-menu">
          <!-- IdP list will be injected here -->
        </ul>
      </div>
    </div>
  </main>

  <!-- FOOTER -->
  <footer>
    <div class="container">
      <div class="d-flex flex-wrap justify-content-center gap-3">
        <a id="footer-legal" href="" class="text-white text-decoration-none" target="_blank" rel="noopener"></a>
        <span class="text-white" style="opacity: 0.5;">|</span>
        <a id="footer-privacy" href="" class="text-white text-decoration-none" target="_blank" rel="noopener"></a>
        <span class="text-white" style="opacity: 0.5;">|</span>
        <a id="footer-accessibility" href="" class="text-white text-decoration-none" target="_blank" rel="noopener"></a>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script>
    function applyTranslations() {
      if (!window.i18next) return;
      const resource = window.i18next.getResourceBundle(window.i18next.language, 'translation');
      if (!resource) return;

      const title = resource.titles?.page_title || 'Accedi';
      const logoTitle = resource.titles?.login_logo || 'Accedi con SPID';
      const legal = resource.footer?.legal_notice || 'Note legali';
      const privacy = resource.footer?.privacy_policy || 'Privacy Policy';
      const accessibility = resource.footer?.accessibility_statement || 'Dichiarazione Accessibilità';
      const spidLoginText = resource.digital_id?.spid?.logo_text || 'Entra con SPID';
      const spidHelperText = resource.titles?.login_digital_identity || 'Seleziona il tuo Identity Provider SPID dall’elenco.';

      const tabTitle = document.getElementById('tab-title');
      if (tabTitle) tabTitle.textContent = title;

      const walletTitle = document.getElementById('wallet-title');
      if (walletTitle) walletTitle.textContent = logoTitle;

      const legalEl = document.getElementById('footer-legal');
      if (legalEl) legalEl.textContent = legal;

      const privacyEl = document.getElementById('footer-privacy');
      if (privacyEl) privacyEl.textContent = privacy;

      const accessibilityEl = document.getElementById('footer-accessibility');
      if (accessibilityEl) accessibilityEl.textContent = accessibility;

      const spidLoginEl = document.getElementById('spid-login-text');
      if (spidLoginEl) spidLoginEl.textContent = spidLoginText;

      const spidHelperEl = document.getElementById('spid-helper-text');
      if (spidHelperEl) spidHelperEl.textContent = spidHelperText;
    }

    if (window.i18next && window.i18nextHttpBackend) {
      window.i18next
        .use(window.i18nextHttpBackend)
        .init({
          lng: 'it',
          fallbackLng: 'it',
          backend: {
            loadPath: '/static/locales/wallets-{{lng}}.json'
          }
        })
        .then(applyTranslations)
        .catch((err) => console.error('[disco] i18next init error:', err));
    }

    document.getElementById('lang-select')?.addEventListener('change', (e) => {
      const lang = e.target.value;
      if (window.i18next) {
        window.i18next.changeLanguage(lang).then(applyTranslations);
      }
    });
  </script>
  <script>
    (function populateSpidIdps() {
      const urlParams = new URLSearchParams(window.location.search);
      const servicePath = urlParams.get('return');
      const entityID = urlParams.get('entityID');
      const list = document.getElementById('spid-idp-list-xlarge-root-post');

      if (!list) return;
      if (!entityID || !servicePath) return;

      const idps = [
        { name: 'SPID Test', entityID: 'https://demo.spid.gov.it', logo: '/static/spid/spid-agid-logo-lb.png' },
        { name: 'Aruba ID', entityID: 'https://loginspid.aruba.it', logo: '/static/spid/spid-idp-arubaid.svg' },
        { name: 'Infocert ID', entityID: 'https://identity.infocert.it', logo: '/static/spid/spid-idp-infocertid.svg' },
        { name: 'Intesa ID', entityID: 'https://spid.intesa.it', logo: '/static/spid/spid-idp-intesaid.svg' },
        { name: 'Lepida ID', entityID: 'https://id.lepida.it/idp/shibboleth', logo: '/static/spid/spid-idp-lepidaid.svg' },
        { name: 'Namirial ID', entityID: 'https://idp.namirialtsp.com/idp', logo: '/static/spid/spid-idp-namirialid.svg' },
        { name: 'Poste ID', entityID: 'https://posteid.poste.it', logo: '/static/spid/spid-idp-posteid.svg' },
        { name: 'Sielte ID', entityID: 'https://identity.sieltecloud.it', logo: '/static/spid/spid-idp-sielteid.svg' },
        { name: 'SPIDItalia Register.it', entityID: 'https://spid.register.it', logo: '/static/spid/spid-idp-spiditalia.svg' },
        { name: 'Tim ID', entityID: 'https://login.id.tim.it/affwebservices/public/saml2sso', logo: '/static/spid/spid-idp-timid.svg' },
        { name: 'TeamSystem ID', entityID: 'https://spid.teamsystem.com/idp', logo: '/static/spid/spid-idp-teamsystemid.svg' }
      ];

      idps.sort(() => Math.random() - 0.5);

      idps.forEach((idp) => {
        const li = document.createElement('li');
        li.className = 'spid-idp-button-link';

        const a = document.createElement('a');
        a.href = `${servicePath}?entityID=${encodeURIComponent(idp.entityID)}&return=${encodeURIComponent(servicePath)}`;
        a.className = 'spid-idp-button-ignore';

        if (idp.logo) {
          const img = document.createElement('img');
          img.src = idp.logo;
          img.alt = idp.name;
          a.appendChild(img);
        } else {
          a.textContent = idp.name;
        }

        li.appendChild(a);
        list.appendChild(li);
      });

      const links = [
        { text: 'Maggiori informazioni', href: 'https://www.spid.gov.it/' },
        { text: 'Non hai SPID?', href: 'https://www.spid.gov.it/richiedi-spid' },
        { text: 'Serve aiuto?', href: 'https://www.spid.gov.it/serve-aiuto' }
      ];

      links.forEach((link) => {
        const li = document.createElement('li');
        li.className = 'spid-idp-support-link';

        const a = document.createElement('a');
        a.href = link.href;
        a.target = '_blank';
        a.rel = 'noopener';
        a.textContent = link.text;

        li.appendChild(a);
        list.appendChild(li);
      });
    })();
  </script>
  <script src="/static/spid/spid-sp-access-button.js"></script>
  <script src="/static/spid/spid_button.js"></script>
</body>
</html>
