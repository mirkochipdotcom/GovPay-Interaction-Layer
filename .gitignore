.env
.env.proxyspid
.env.metadata
*.log
*.pid

# SSL directory - exclude all except README
ssl/*
!ssl/README.md

# Certificate directory - exclude all except README  
certificate/*
!certificate/README.md

# Debug tool root: ignora tutto tranne README esplicativo (non tracciamo index.php)
debug/*
!debug/README.md

# Ignore composer vendor directory
vendor/

# spid-cie-php in modalit√† proxy: working copy/runtime data (bind-mount)
/spid-proxy/data/*
/spid-proxy/data/.*
!/spid-proxy/data/.gitkeep

# spid-proxy metadata generator: working directory (non versionare)
/spid-proxy/metadata-work/

# Metadata SPID/CIE (file generati): mantieni solo la struttura (gitkeep), non versionare gli XML.
/spid-proxy/metadata/*
!/spid-proxy/metadata/.gitkeep

/spid-proxy/metadata-current/*
!/spid-proxy/metadata-current/.gitkeep

/spid-proxy/metadata-archive/*
!/spid-proxy/metadata-archive/.gitkeep

# Logo ente personalizzato (non versionare)
img/stemma_ente.png

# Favicon personalizzate (non versionare)
img/favicon.ico
img/favicon.png

# iam-proxy-italia (SATOSA): directory montate e popolate via script (non versionare)
/iam-proxy/iam-proxy-italia-project/*
!/iam-proxy/iam-proxy-italia-project/.gitkeep
# Metadata SP generati dinamicamente (non versionati, specifici per ambiente)
iam-proxy/metadata-sp/*
!iam-proxy/metadata-sp/README.md

# Local directory for runtime data (outside repository)
.local/
/iam-proxy/nginx/html/static/*
!/iam-proxy/nginx/html/static/.gitkeep

