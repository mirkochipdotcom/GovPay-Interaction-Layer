{
    "name": "mirkochipdotcom/govpay-interaction-layer",
    "description": "Piattaforma Completa per l'Inizializzazione dei Pagamenti (Cittadino) e la Gestione Amministrativa (Ufficio) delle Transazioni PagoPA.",
    "version": "2025.10.0-alpha",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.13",
        "slim/psr7": "^1.6",
        "nyholm/psr7": "^1.5",
        "twig/twig": "^3.0",
        "slim/twig-view": "^3.3",
        "govpay/pagamenti-client": "dev-main",
        "govpay/ragioneria-client": "dev-main",
        "govpay/pendenze-client": "dev-main",
        "govpay/backoffice-client": "dev-main"
    },
    "repositories": [
        {
            "type": "path",
            "url": "govpay-clients/generated-clients/pagamenti-v3/pagamenti-client",
            "options": { "symlink": false }
        },
        {
            "type": "path",
            "url": "govpay-clients/generated-clients/ragioneria-v3/ragioneria-client",
            "options": { "symlink": false }
        },
        {
            "type": "path",
            "url": "govpay-clients/generated-clients/pendenze-v2/pendenze-client",
            "options": { "symlink": false }
        },
        {
            "type": "path",
            "url": "govpay-clients/generated-clients/backoffice-v1/backoffice-client",
            "options": { "symlink": false }
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "config.platform": {
        "php": "8.4"
    },
        "minimum-stability": "dev",
        "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": [
                "app/",
                "backoffice/src/"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t backoffice/src/public",
        "post-install-cmd": ["@dump-autoload"],
        "post-update-cmd": ["@dump-autoload"]
    }
}
